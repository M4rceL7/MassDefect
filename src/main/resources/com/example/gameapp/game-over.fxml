<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="death" alignment="CENTER" prefHeight="500.0" prefWidth="250.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gameapp.Controller.DeathController">
   <children>
      <VBox fx:id="highscore" alignment="CENTER" prefHeight="26.0" prefWidth="100.0">
         <children>
            <Label fx:id="labelhighscore" alignment="CENTER" prefHeight="40.0" prefWidth="178.0" text="HIGHSCORE:" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
               <effect>
                  <DropShadow />
               </effect>
            </Label>
         </children>
      </VBox>
      <VBox fx:id="score" alignment="CENTER" prefHeight="25.0" prefWidth="100.0">
         <children>
            <Label fx:id="labelscore" alignment="CENTER" prefHeight="40.0" prefWidth="127.0" text="SCORE:" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
               <effect>
                  <DropShadow />
               </effect>
            </Label>
         </children>
      </VBox>
      <VBox alignment="CENTER" prefHeight="55.0" prefWidth="300.0">
         <children>
            <Label text="GAME OVER" textFill="#ff7070">
               <font>
                  <Font name="System Bold" size="32.0" />
               </font>
               <effect>
                  <DropShadow />
               </effect>
            </Label>
         </children></VBox>
      <VBox fx:id="restart" alignment="CENTER" prefHeight="66.0" prefWidth="239.0">
         <children>
            <Label fx:id="labelrestart" alignment="CENTER" prefHeight="26.0" prefWidth="238.0" text="Press &quot;Enter&quot; to try again" textFill="WHITE">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="tomenu" alignment="CENTER" prefHeight="24.0" prefWidth="237.0" text="Press &quot;ESCAPE&quot; to close Game" textFill="WHITE">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</VBox>
